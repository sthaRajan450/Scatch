<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

</head>

<body class="realtive">
    <%- include('partials/header') %>
        <div class="flex h-screen w-full ">
            <div class="flex flex-col px-20 py-10 gap-y-20 w-1/4">
                <div class="flex">
                    <h1 class="mr-3">sortby</h1>
                    <select " class=" border">
                        <option value="">popular</option>
                        <option value="">popular</option>
                        <option value="">popular</option>
                    </select>
                </div>
                <div class="flex flex-col gap-y-2">
                    <a href="#">New Collection</a>
                    <a href="#">All Products</a>
                    <a href="#">Discounted Products</a>
                </div>
                <div>
                    <h1 class="mb-4">Filter by:</h1>
                    <div class="flex flex-col gap-y-2">
                        <a href="">Availability</a>
                        <a href="">Discount</a>
                    </div>

                </div>
            </div>
            <div class="w-3/4 h-full bg-gray-200 px-20 py-10 ">
                <div class=" flex gap-5 flex-wrap  w-full justify-start ">
                    <%if(products.length>0){%>

                        <%products.forEach((product)=>{%>
                            <div class=" w-70 h-86 bg-[<%=product.bgColor%>]">
                                <div class="h-70 w-full ">
                                    <img class="w-full h-full object-cover"
                                        src="data:image/jpeg;base64,<%=product.image.toString('base64')%>" alt="product">
                                </div>
                                <div
                                    class="flex  justify-between items-center bg-[<%=product.panelColor%>] text-[<%=product.textColor%>] px-5 py-2">
                                    <div>
                                        <h1 class="text-xl font-semibold">
                                            <%=product.name%>
                                        </h1>
                                        <p class=" font-semibold">RS.<%=product.price%>
                                        </p>
                                    </div>
                                    <div class="bg-white rounded-full w-10 h-10 text-2xl text-center cursor-pointer ">
                                        <a class="w-full h-full" href="/addtocart/<%=product._id%>">+</a>
                                    </div>
                                </div>
                            </div>

                            <%})%>


                                <%}else{%>
                                    <h1>No products added yet</h1>
                                    <%}%>



                </div>
            </div>
        </div>
</body>

</html>